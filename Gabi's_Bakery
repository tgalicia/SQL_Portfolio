/*
Creating Table for Bakery Inventory
*/

CREATE TABLE gabi_bakery_inventory(
    id INT NOT NULL,
    name VARCHAR(255) NOT NULL,
    quantity INT NOT NULL
); INSERT INTO gabi_bakery_inventory
VALUES(1, "chocolate chip cookie", 5);
